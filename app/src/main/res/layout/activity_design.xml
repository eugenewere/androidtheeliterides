<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/mainpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:background="@drawable/reqister_image_night"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="@color/colorBluishWhite"
            android:textSize="20sp"
            android:fontFamily="monospace"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textFontWeight="10sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="400dp">

            <androidx.cardview.widget.CardView
                android:layout_width="360dp"
                android:layout_height="332dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shadowcard"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:id="@+id/cardreg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/register_text2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/register"
                        android:textColor="@color/colorBlack"
                        android:textSize="17sp" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="0dp"
                                android:text="@string/user_details"
                                android:textColor="@color/colorBlack" />
                            <EditText
                                android:id="@+id/username_input_text"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:drawableLeft="@drawable/ic_person_black_24dp"
                                android:hint="Username"
                                android:padding="5dp"
                                android:elevation="0dp"
                                android:textColorHint="@color/colorEditTextHint"
                                android:textSize="14sp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="30dp"/>
                            <EditText
                                android:id="@+id/first_name_input_text"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:drawableLeft="@drawable/ic_person_black_24dp"
                                android:hint="First Name"
                                android:padding="5dp"
                                android:elevation="10dp"
                                android:textColorHint="@color/colorEditTextHint"
                                android:textSize="14sp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="10dp"/>
                            <EditText
                                android:id="@+id/last_name_input_text"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:drawableLeft="@drawable/ic_person_black_24dp"
                                android:hint="Last Name"
                                android:padding="5dp"
                                android:elevation="10dp"
                                android:textColorHint="@color/colorEditTextHint"
                                android:textSize="14sp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contact Details:"
                                android:textColor="@color/colorBlack"
                                android:layout_marginStart="10dp"/>
                            <EditText
                                android:id="@+id/email_input_text"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:drawableLeft="@drawable/ic_email_black_24dp"
                                android:hint="Email"
                                android:padding="5dp"
                                android:textColorHint="@color/colorEditTextHint"
                                android:elevation="10dp"
                                android:textSize="14sp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="10dp"/>
                            <EditText
                                android:id="@+id/phone_number_input_text"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"
                                android:hint="Phone Number"
                                android:textSize="14sp"
                                android:inputType="number"
                                android:textColorHint="@color/colorEditTextHint"
                                android:padding="5dp"
                                android:elevation="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Verification Password:"
                                android:textColor="@color/colorBlack"
                                android:layout_marginStart="10dp"/>
                            <EditText
                                android:id="@+id/password_input_text"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:drawableLeft="@drawable/ic_lock_black_24dp"
                                android:hint="Password"
                                android:textSize="14sp"
                                android:inputType="text"
                                android:padding="5dp"
                                android:elevation="10dp"
                                android:textColorHint="@color/colorEditTextHint"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"/>
                            <EditText
                                android:id="@+id/password_confirm_input_text"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:drawableLeft="@drawable/ic_lock_open_black_24dp"
                                android:hint="Confirm Password"
                                android:textSize="14sp"
                                android:inputType="text"
                                android:textColorHint="@color/colorEditTextHint"
                                android:padding="5dp"
                                android:elevation="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"/>
                            <Button
                                android:id="@+id/button_register"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/register"
                                android:background="@drawable/custombuttons"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/colorPrimary"
                                android:textColor="@color/colorBluishWhite"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="50dp"/>

                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>